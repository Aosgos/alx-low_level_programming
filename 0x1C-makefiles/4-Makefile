# Compiler
CC = gcc

# Compiler flags
CFLAGS = -Wall -Werror -Wextra -pedantic

# Source files
SRC = main.c school1.c school2.c

# Object files
OBJ = $(SRC:.c=.o)

# Executable name
NAME = school

# Program to delete files
RM = rm -f

# Rules
all: $(OBJ)

clean:
	$(RM) $(OBJ) $(NAME) *~ \#*\# *.swp

oclean:
	$(RM) $(OBJ)

fclean: clean oclean

re: fclean all
